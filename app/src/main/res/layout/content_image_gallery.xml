<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:showIn="@layout/activity_image_gallery"
	tools:context="com.developer4droid.swipegallery.activity.ImageGalleryActivity"
	>

	<data>

		<import
			type="android.view.View"
			alias="v"
			/>

		<variable
			name="imageGallery"
			type="com.developer4droid.swipegallery.viewmodel.ImageGalleryViewModel"
			/>
	</data>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/white"
		>

		<!--RecyclerView-->
		<android.support.v7.widget.RecyclerView
			android:id="@+id/recycler_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:listItem="@layout/main_image_row_view"
			android:visibility="@{imageGallery.loading? v.GONE : v.VISIBLE}"
			tools:visibility="gone"
			/>

		<!--Loading View-->
		<ProgressBar
			android:id="@+id/loading_view"
			style="@style/Base.Widget.AppCompat.ProgressBar"
			android:indeterminate="true"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:visibility="@{imageGallery.loading? v.VISIBLE : v.GONE}"
			tools:visibility="invisible"
			android:layout_gravity="center"
			/>

	</FrameLayout>
</layout>
